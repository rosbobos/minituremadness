@page
@model MiniatureMadness.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Browse Our Products</h1>

@foreach (var product in Model.Products)
{
    <div>
        <a asp-page="/Shop/Product/@product.ID">
            <img src="@product.Image" />
        </a>
        <h2>@product.Name</h2>
        <p>@product.Price</p>
        <a asp-page="/Shop/Product/@product.ID">View Product</a>
    </div>
}